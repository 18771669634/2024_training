<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/grey_f3">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:padding="10dp">

        <TextView
            android:id="@+id/historical_top_tv1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="总支出"
            android:textSize="18sp"
            android:layout_marginLeft="40dp"/>

        <TextView
            android:id="@+id/historical_top_out"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/historical_top_tv1"
            android:text="￥ 0"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="40dp"
            android:textColor="@color/black"/>

        <TextView
            android:id="@+id/historical_top_tv2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="总收入"
            android:textSize="18sp"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="220dp"/>

        <TextView
            android:id="@+id/historical_top_in"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/historical_top_tv1"
            android:text="￥ 0"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:textColor="@color/black"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="220dp"/>

    </RelativeLayout>

</LinearLayout>