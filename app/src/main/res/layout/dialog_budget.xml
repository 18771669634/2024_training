<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="wrap_content"
    android:padding="10dp"
    android:background="@color/white">

    <TextView
        android:id="@+id/dialog_budget_tv"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:text="￥"
        android:textSize="25sp"
        android:textStyle="bold"
        android:layout_marginTop="10dp"
        android:gravity="center"/>

    <EditText
        android:id="@+id/dialog_budget_et"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_toRightOf="@id/dialog_budget_tv"
        android:inputType="numberDecimal"
        android:background="@drawable/budget_edit"
        android:layout_marginTop="10dp"
        android:hint="请输入预算金额"
        android:layout_marginLeft="5dp"
        android:paddingLeft="10dp">
        <requestFocus/>
    </EditText>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@id/dialog_budget_et"
        android:padding="10dp">

        <Button
            android:id="@+id/dialog_budget_btn_cancel"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="取消"
            android:background="@drawable/edit_text"
            android:textColor="@color/black"
            android:layout_marginRight="5dp"
            android:textSize="18sp"/>

        <Button
            android:id="@+id/dialog_budget_btn_ensure"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="确定"
            android:background="@drawable/ac_main_recordbtn_bg"
            android:textColor="@color/black"
            android:layout_marginRight="5dp"
            android:textSize="18sp"/>

    </LinearLayout>


</RelativeLayout>