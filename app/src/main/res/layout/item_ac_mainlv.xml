<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    android:padding="10dp"
    android:background="@color/white">

    <ImageButton
        android:id="@+id/item_ac_mainlv_iv"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:src="@mipmap/food"
        android:scaleType="centerInside"
        android:adjustViewBounds="true"
        android:background="@drawable/image_btn" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/item_ac_mainlv_iv"
        android:layout_marginLeft="10dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/item_ac_main_tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/food"
            android:textSize="16sp"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/item_ac_main_tv_beizhu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="肯德基"
            android:layout_marginTop="5dp"
            android:textSize="12sp" />

    </LinearLayout>


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginLeft="10dp"
        android:orientation="vertical"
        android:layout_centerVertical="true"
        android:gravity="right">

        <TextView
            android:id="@+id/item_ac_main_tv_money"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="￥100.0"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/item_ac_main_tv_time"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="2024年6月20日"
            android:textSize="16sp"
            />

    </LinearLayout>

</RelativeLayout>